<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/colorGreenButtonPressed"/>
            <corners android:radius="@dimen/button_corners_radius"/>
            <padding android:bottom="@dimen/button_padding"
                     android:left="@dimen/button_padding"
                     android:right="@dimen/button_padding"
                     android:top="@dimen/button_padding"/>
            <stroke android:width="1dp"
                    android:color="@color/colorGray"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/colorGreenButton"/>
            <corners android:radius="@dimen/button_corners_radius"/>
            <padding android:bottom="@dimen/button_padding"
                     android:left="@dimen/button_padding"
                     android:right="@dimen/button_padding"
                     android:top="@dimen/button_padding"/>
            <stroke android:width="1dp"
                    android:color="@color/colorPrimaryDark"/>
        </shape>
    </item>
</selector>